{
  "name": "chrome-extension-boilerplate",
  "displayName": "Chrome extension boilerplate",
  "version": "0.0.0",
  "description": "A basic Plasmo extension.",
  "author": "topaz",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build"
  },
  "dependencies": {
    "@tailwindcss/forms": "0.5.2",
    "@tailwindcss/typography": "0.5.2",
    "antd": "4.21.3",
    "plasmo": "latest",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.4.0",
    "tailwindcss": "3.1.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/chrome": "0.0.190",
    "@types/node": "17.0.43",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "postcss": "8.4.14",
    "prettier": "2.7.0",
    "typescript": "4.7.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "notifications",
      "background",
      "tabs",
      "unlimitedStorage",
      "storage",
      "contextMenus",
      "webNavigation",
      "downloads",
      "cookies"
    ]
  }
}
